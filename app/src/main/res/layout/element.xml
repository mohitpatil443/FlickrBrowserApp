<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="8dp" android:weightSum="3"

              android:layout_margin="8dp">
    <ImageView
            android:layout_height="115dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/thumbnail"
            android:layout_width="115dp"
            android:scaleType="centerCrop"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title" android:layout_weight="1"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:maxLines="2"
            android:textSize="14sp"/>
</LinearLayout>